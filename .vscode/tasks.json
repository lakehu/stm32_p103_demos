{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "make build",
			"type": "shell",
			"command": "make",
			"args": [
				"V=1",
				"demos/printf_demo/main.elf"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Start QEMU",
			"type": "shell",
			"command": "${env:HOME}/usr/bin/qemu-system-arm",
			"args": [
				"-M",
				"stm32vldiscovery",
				"-cpu",
				"cortex-m3",
				"-nographic",
				"-d", "int,guest_errors", // generate info log to avoid problemMatcher can't match empty output 
				"-kernel", "${workspaceFolder}/demos/printf_demo/main.elf",
				"-S",   // Start with GDB server paused
				"-s"    // Listen for incoming GDB connection
			],
            "options": {
                "cwd": "${workspaceFolder}"                    
            },
            "isBackground": true,
			// This task is run before some debug tasks.
			// Problem is, it's a watch script, and since it never exits, VSCode
			// complains. All this is needed so VSCode just lets it run.
			"problemMatcher": [
				{
				"pattern": [
					{
					"regexp": ".",
					"file": 1,
					"location": 2,
					"message": 3
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": ".",
				}
				}
			] 
		},
		{
			"label": "Kill QEMU",
			"type": "shell",
			"command": "pkill",
			"args": [
				"qemu-system-arm"
			],
            "isBackground": true,
			"problemMatcher": [
				{
				"pattern": [
					{
					"regexp": ".",
					"file": 1,
					"location": 2,
					"message": 3
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": ".",
				}
				}
			] 
		},
		{
			"label": "build and run qemu",
            "dependsOrder":"sequence", 
			"dependsOn": [
                "make build",
                "Start QEMU",
            ] 
		},
	]
  }
